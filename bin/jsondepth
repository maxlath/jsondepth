#!/usr/bin/env node
const { file, showHelp, lineByLine } = require('../lib/parse_arguments')
const { append, log } = require('../lib/aggregator')

if (showHelp) {
  require('../lib/show_help')()
} else if (file) {
  log(file)
} else if (lineByLine) {
  const split = require('split')
  process.stdin
  .pipe(split())
  .on('data', line => {
    line = line.replace(/,$/, '')
    const isValidJsonLine = line[0] === '{' || line.slice(-1)[0] === '}'
    if (isValidJsonLine) log(line)
  })
} else {
  process.stdin
  .on('data', append)
  .on('end', log)
}

// Prevent logging an EPIPE error when piping the output
// cf https://github.com/maxlath/wikidata-cli/issues/7
process.stdout.on('error', err => {
  if (err.code !== 'EPIPE') throw err
})
